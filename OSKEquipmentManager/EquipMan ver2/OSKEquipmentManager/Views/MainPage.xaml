<Page
    x:Class="OSKEquipmentManager.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding MainViewModel, Source={StaticResource Locator}}"
    xmlns:viewcontrols="using:OSKEquipmentManager.Views.Controls"
    mc:Ignorable="d">
    <Grid
        x:Name="ContentArea"
        Margin="{StaticResource MediumLeftRightMargin}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0"
                  Background="{ThemeResource SystemControlChromeLowAcrylicWindowBrush}">
            <Frame>
                <viewcontrols:EquipListViewControl/>
            </Frame>
        </Grid>
        <Grid Grid.Column="1">
            <Frame x:Name="EquipDitail">
                <viewcontrols:EquipDetailControl/>
            </Frame>
        </Grid>
        <!--The SystemControlPageBackgroundChromeLowBrush background represents where you should place your content. 
                Place your content here.-->
    </Grid>
</Page>
